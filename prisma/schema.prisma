generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Next-Auth Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  currencyPreference String @default("IDR")
  accounts      Account[]
  sessions      Session[]
  
  // Password Reset
  resetToken       String?   @unique
  resetTokenExpiry DateTime?
  
  // Domain Models
  wallets               Wallet[]
  transactions          Transaction[]
  recurringTransactions RecurringTransaction[]
  budgets               Budget[]
  goals                 Goal[]
  categories            Category[]

  // Plaid Integration
  plaidAccessToken String?
  plaidItemId      String?
  institutionName  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Domain Models

model Wallet {
  id          String   @id @default(cuid())
  name        String
  type        String   // "bank", "cash", "ewallet", "investment", "other"
  currency    String   @default("USD")
  balance     Float    @default(0)
  icon        String?  // Optional icon identifier
  color       String?  // Optional hex color for UI
  isDefault   Boolean  @default(false)
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  transactions Transaction[]
  recurringTransactions RecurringTransaction[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([userId, name])
  @@index([userId])
}

model Transaction {
  id          String   @id @default(cuid())
  amount      Float
  currency    String   @default("USD")
  description String
  category    String
  date        DateTime
  type        String   // "income", "expense", "transfer"
  
  // Wallet relation
  walletId    String?
  wallet      Wallet?  @relation(fields: [walletId], references: [id], onDelete: Cascade)
  
  // For wallet-to-wallet transfers
  transferId      String?  @unique
  relatedTransfer Transaction? @relation("TransferPair", fields: [transferId], references: [id], onDelete: SetNull)
  transfer        Transaction? @relation("TransferPair")
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId, walletId])
  @@index([date])
  @@index([userId, date(sort: Desc)])
  @@index([userId, type])
  @@index([userId, category])
}

model RecurringTransaction {
  id            String   @id @default(cuid())
  name          String?
  notes         String?
  amount        Float
  currency      String   @default("USD")
  description   String
  category      String
  type          String   // "income" or "expense"
  frequency     String   // "weekly", "monthly", "yearly"
  startDate     DateTime
  endDate       DateTime?
  lastGenerated DateTime?
  nextDueDate   DateTime
  lastConfirmedAt DateTime?
  status        String   @default("pending")
  reminderEnabled Boolean @default(false)
  
  // Wallet relation
  walletId      String?
  wallet        Wallet?  @relation(fields: [walletId], references: [id], onDelete: Cascade)
  
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([userId])
  @@index([userId, nextDueDate])
  @@index([userId, status])
}

model Budget {
  id          String   @id @default(cuid())
  userId      String
  category    String
  amount      Float
  currency    String   @default("USD")
  period      String   // "monthly", "weekly"
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
}

model Goal {
  id          String   @id @default(cuid())
  userId      String
  name        String
  targetAmount Float
  currentAmount Float @default(0)
  currency    String   @default("USD")
  deadline    DateTime?
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
}

model Category {
  id        String   @id @default(cuid())
  name      String
  type      String   // "income", "expense", or "both"
  color     String?  // Optional hex color for UI
  icon      String?  // Optional icon name
  isDefault Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
}
